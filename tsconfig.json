{
	"extends": "astro/tsconfigs/strict",
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"moduleResolution": "node16",
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@images/*": ["src/images/*"],
			"@layouts/*": ["src/layouts/*"],
			"@pages/*": ["src/pages/*"]
		}
	}
}
