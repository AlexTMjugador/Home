{
	"extends": "astro/tsconfigs/strict",
	"include": [".astro/types.d.ts", "./**/*"],
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@components/*": ["src/components/*"],
			"@images/*": ["src/images/*"],
			"@layouts/*": ["src/layouts/*"],
			"@pages/*": ["src/pages/*"]
		}
	}
}
